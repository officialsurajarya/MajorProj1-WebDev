<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card -->
      <div class="card shadow-lg p-4">
        <!-- Image -->
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="Listing Image"
          style="height: 350px; object-fit: cover"
        />

        <!-- Card Body -->
        <div class="card-body mt-2">
          <h3 class="card-title mb-3"><%= listing.title %></h3>

          <p class="card-text text-muted"><%= listing.description %></p>

          <hr />

          <!-- Details -->
          <p class="mb-1">
            <strong>Price:</strong>
            ‚Çπ <%= listing.price.toLocaleString("en-IN") %>
          </p>

          <p class="mb-1">
            <strong>Location:</strong>
            <%= listing.location %>
          </p>

          <p class="mb-3">
            <strong>Country:</strong>
            <%= listing.country %>
          </p>

          <!-- Actions -->
          <div class="d-flex gap-2">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">
              ‚úèÔ∏è Edit
            </a>

            <form
              action="/listings/<%= listing._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger">üóë Delete</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Back -->
      <div class="mt-3 text-center">
        <a href="/listings" class="text-decoration-none">
          ‚Üê Back to Listings
        </a>
      </div>
    </div>
  </div>
</div>
